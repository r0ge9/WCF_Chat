<UserControl x:Class="ChatClient.UseControls.ImageLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.UseControls"
             Name="imagelogo">
    <Border CornerRadius="50" BorderThickness="2" BorderBrush="White" VerticalAlignment="Center">
        <Ellipse Width="23" Height="23">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding ElementName=imagelogo,Path=Image}"/>
            </Ellipse.Fill>
        </Ellipse>
    </Border>
</UserControl>
